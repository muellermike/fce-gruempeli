<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Meine ASP.NET-Anwendung</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body>
    <div class="navbar-fixed-top">
        <nav class="navbar" style="background-color:white">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="glyphicon glyphicon-menu-hamburger"></span>
                        @*<span class="glyphicon glyphicon-align-justify"></span>*@
                    </button>
                </div>
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse">
                    <ul class="nav nav-tabs nav-justified">
                        <li class="@(ViewContext.RouteData.Values["Action"].ToString().ToLowerInvariant() == "gruempi" ? "active" : "")">@Html.ActionLink("Grümpeli", "gruempi", "home")</li>
                        <li class="@(ViewContext.RouteData.Values["Action"].ToString().ToLowerInvariant() == "school" ? "active" : "")">@Html.ActionLink("Schülerturnier", "school", "home")</li>
                        <li class="@(ViewContext.RouteData.Values["Action"].ToString().ToLowerInvariant() == "index" ? "active" : "")">@Html.ActionLink("Infos & Anmeldung", "index", "registration")</li>
                        @*<li>@Html.ActionLink("Spielplan", "schedule", "home")</li>*@
                        <li class="@(ViewContext.RouteData.Values["Action"].ToString().ToLowerInvariant() == "rules" ? "active" : "")">@Html.ActionLink("Reglement", "rules", "home")</li>
                        <li class="@(ViewContext.RouteData.Values["Action"].ToString().ToLowerInvariant() == "contact" ? "active" : "")">@Html.ActionLink("Kontakt", "contact", "home")</li>
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - FC Eschlikon Grümpelturnier</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

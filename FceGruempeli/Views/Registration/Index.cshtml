@model FceGruempeli.Models.RegistrationViewModel
@{
    ViewBag.Title = "Anmelden";
}
<h1 style="align-self:center">Anmelden</h1>
<br />
@using (Html.BeginForm("Register", "Registration", FormMethod.Post, new { @class = "form-horizontal" }))
{
    
    @Html.ValidationSummary(true)

    <div class="form-group">
        <label for="inputCompany" class="col-sm-2 control-label">Firma</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Company, new { @class="form-control"})
        </div>
    </div>
    <div class="form-group">
        <label for="inputLastName" class="col-sm-2 control-label">Name *</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", @placeholder="Name", @required="required" })
        </div>
    </div>
    <div class="form-group">
        <label for="inputFirstName" class="col-sm-2 control-label">Vorname *</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", @placeholder = "Vorname", @required = "required" })
        </div>
    </div>
    <div class="form-group">
        <label for="inputStreet" class="col-sm-2 control-label">Strasse / NR *</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Street, new { @class = "form-control", @placeholder = "Strasse", @required = "required" })
        </div>
    </div>
    <div class="form-group">
        <label for="inputCity" class="col-sm-2 control-label">Ort *</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.City, new { @class = "form-control", @placeholder = "Ort", @required = "required" })
        </div>
    </div>
    <div class="form-group">
        <label for="inputPhone" class="col-sm-2 control-label">Telefon *</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", @placeholder = "Telefon", @required = "required" })
        </div>
    </div>
    <div class="form-group">
        <label for="inputMobilePhone" class="col-sm-2 control-label">Mobil</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.MobilePhone, new { @class = "form-control", @placeholder = "Mobil" })
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail" class="col-sm-2 control-label">Email *</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "Email", @required = "required" })
        </div>
    </div>
    <br />

    <div class="form-group">
        <label for="inputTeamName" class="col-sm-2 control-label">Mannschaftsname *</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.TeamName, new { @class = "form-control", @placeholder = "Mannschaftsname", @required = "required" })
        </div>
    </div>
    <div class="form-group">
        <label for="inputCaptain" class="col-sm-2 control-label">Captain *</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Captain, new { @class = "form-control", @placeholder = "Captain", @required = "required" })
        </div>
    </div>
    <div class="form-group">
        <label for="inputYear" class="col-sm-2 control-label">Jahrgang *</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Year, new { @class = "form-control", min = "1900", max = "2015", @required = "required" })
        </div>
    </div>

    <br />
    <div class="form-group">
        <label for="inputRemarks" class="col-sm-2 control-label">Bemerkungen</label>
        <div class="col-sm-10">
            @Html.TextAreaFor(x => x.Remarks, new { @class="form-control"})
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">senden</button>
        </div>
    </div>
}